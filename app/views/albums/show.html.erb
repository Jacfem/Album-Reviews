
<div class="row">
  <div class="col-md-4">
    <%= image_tag @album.album_image.url(:album_show), class: "album-show" %>
  </div>

  <div class="col-md-8">
    <h2><%= @album.title %></h2>
    <h3><%= @album.artist %></h3>
    <p><%= @album.category.name %></p>
    <h3>Average Rating</h3>
    <div class="average-review-rating" data-score="<%= @average_review %>"></div>
    <span>Based on <%= @album.reviews.count %> reviews</span>
    <p><%= @album.description %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-4">

    <%= render @album.reviews %>
    <div>
      <%= link_to "Add a Review", new_album_review_path(@album) %>
    </div>
  </div>
</div>

<%= link_to "All Albums", root_path %><br>
<% if user_signed_in? %>
  <% if @album.user_id == current_user.id %>
    <%= link_to "Update Album", edit_album_path(@album) %><br>
    <%= link_to "Delete Album", album_path(@album), method: :delete, data: {confirm: "Are you sure?"} %><br>
  <% end %>
<% end %>

<script>
  $('.review-rating').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>

<script>
  $('.average-review-rating').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>
