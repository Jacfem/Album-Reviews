<%= simple_form_for @album do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select Musical Genre")%>
  <%= f.input :title, label: "Album Name" %>
  <%= f.input :artist, label: "Artist" %>
  <%= f.input :description, label: "Description" %>
  <%= f.button :submit %>
<% end %>


<%= link_to "All Albums", root_path %>
